<% if !@product.taxons.blank? %>
<div id="taxon-crumbs">
<h3><%= link_to_function t('look_for_similar_items')  %></h3>
  <div>
    <% @product.taxons.each do |taxon| %>
      <%= taxon_crumbs(taxon) %>
    <% end %>
  </div>
</div>
<% end %>

<% content_for :head do %>
  <% javascript_tag do %>
    $(document).ready(function() {
      $('#taxon-crumbs>div').hide();
      $('#taxon-crumbs>h3').click(function() {
        $('#taxon-crumbs>div').slideToggle();
      });
    });
  <% end %>
<% end %>
